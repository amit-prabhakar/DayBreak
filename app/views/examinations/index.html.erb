<h1>Listing examinations</h1>

<table class="table">
  <tr>
    <th>Study</th>
    <th>Name</th>
	<th>Actions</th>
  </tr>

  <% @examinations.each do |examination| %>
      <% unless @study and @study != examination.study %>
          <tr>
            <td><%= link_to examination.study, :action => 'index', :study => examination.study %></td>
            <td><%= examination.name %></td>
            <td>
	            <%= link_to 'Show', examination %>
	            <%= link_to 'Edit', edit_examination_path(examination) %>
	            <%= link_to 'Destroy', examination, :confirm => 'Are you sure?', :method => :delete %>
            </td>
          </tr>
      <% end %>
  <% end %>
</table>

<% if @mean_exposure %>
    <br /><%= "Mean exposure: #{@mean_exposure}" %><br />
<% end %>
<br />
<%= link_to 'Show all', examinations_path %>
